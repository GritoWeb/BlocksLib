{
    "name": "sage/tabs-basic",
    "title": "Tabs (Basic)",
    "category": "design",
    "icon": "index-card",
    "description": "Generic tabbed content block",
    "textdomain": "sage",
    "editorScript": "file:./block.jsx",
    "viewScript": "file:./block.js",
    "render": "file:./block.php",
    "attributes": {
        "eyebrow": {
            "type": "string",
            "default": ""
        },
        "title": {
            "type": "string",
            "default": ""
        },
        "body": {
            "type": "string",
            "default": ""
        },
        "activeTab": {
            "type": "number",
            "default": 0
        },
        "tabs": {
            "type": "array",
            "default": [
                {
                    "label": "Tab 1",
                    "content": ""
                },
                {
                    "label": "Tab 2",
                    "content": ""
                },
                {
                    "label": "Tab 3",
                    "content": ""
                }
            ]
        }
    },
    "supports": {
        "align": ["wide", "full"],
        "html": false,
        "anchor": true
    }
}
